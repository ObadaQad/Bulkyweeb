 
 @model Category
<div class="card shadow border-0 mt-4">
		<div class="card-header bg-secondary  ml-0 py-3">
			<div calss="row">
				<div class="col-12 text-center">
					<h2 class="text-white py-4">Edit Category</h2>
					</div>
				</div>
			</div>
		
		<div class=" card-body p-4">
			<form method="post">
				<input asp-for="Id" hidden />
					<div class=" border p-3 mt-4">
						<div asp-validation-summary="All ">   </div>
						<div class="form-floating py-2 col-12">
							<input asp-for="Name" disabled class="form-control border-0 shadow"> </input>
							<label asp-for="Name" class="ms-2"> </label>
							<span asp-validation-for="Name" class="text-danger"></span>

						</div>
						<div class="form-floating py-2 col-12">
							<input asp-for="DisplayOrder" disabled class="form-control border-0 shadow"> </input>
							<label asp-for="DisplayOrder" class="ms-2"> </label>
							<span asp-validation-for="DisplayOrder" class="text-danger"></span>
 
						</div>

						<div class="row mar-3">
							<div class="col-6">
								<button type="submit" class="btn btn-primary form-control"> Update</button>
							</div>

							<div class="col-6">
								<a asp-controller="Category" asp-action="index" class="btn btn-outline-secondary border form-control">
									back to list
								</a>
							</div>

						</div>
					</div>
			</form>


		</div>

</div>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />



	}



}		